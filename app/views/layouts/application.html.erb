<!DOCTYPE html>
<html>
<head>
  <title>RoR-Ecommerce: <%= yield :title %></title>
  <%#= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'screen.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'print.css', :media => 'print' %>
  <%= stylesheet_link_tag 'main.css' %>
  <!--[if lt IE 8]
    <%= stylesheet_link_tag 'ie.css', :media => 'screen, projection'%>
  <![endif]-->
  <%= yield :head %>
</head>
<body class='page_wrapper'>
  <div id='main-wrapper' class="bp container">
    <% if  yield :menu %>
      <div id='menu'>
        <%= yield :menu %>
      </div>
    <% end %>
  
    <% if  yield :header %>
      <div id='header'>
        <%= yield :header %>
      </div>
    <% end %>
  
    <div id='main'>
      <%= yield %>
    </div>
  
    <% if  yield :footer %>
      <div id='footer'>
        <%= yield :footer %>
      </div>
    <% end %>
  </div>
  
  <%= yield :bottom %>
  <%= javascript_include_tag 'jquery.min', 'rails', 'jquery-ui-1.8.5.custom.min','application' %>
</body>
</html>
